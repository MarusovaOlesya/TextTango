<Window x:Class="TextTango.NewStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextTango"
        mc:Ignorable="d"
        Title="NewNicName" Height="99" Width="331">
    <Grid>
        <StackPanel>
            <TextBlock Text="Status" FontSize="25" Margin="10,0,0,0"/>
            <TextBox Height="20" Width="300" HorizontalAlignment="Left" Margin="10,0,0,0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Content="Date" Height="20" Width="100" Background="#B0C4DE" BorderBrush="#B0C4DE" Margin="0,5,0,0" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>

    </Grid>
</Window>
